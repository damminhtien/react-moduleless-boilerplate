{
  "parser": "babel-eslint",
  "plugins": [
    "prettier",
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": ["error"],
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "react/prop-types": [0],
    "object-curly-spacing": ["error", "always"],
    "max-len": ["error", { "code": 100 }],
    "prefer-const": "error"
  }
}
